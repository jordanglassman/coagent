<div class="enhanced_form" >

<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  
  <fieldset>
  <legend>Enter User Information</legend>
  <div class="field">
    <%= f.label :username %><br />
    <%= select 'user', 'username', InternalUsers.all.collect { |i| [ i.username, i.id ] }, { selected: ( InternalUsers.find_by_username(@user.username) ? InternalUsers.find_by_username(@user.username).id : nil) } %>
  </div>
  <div class="field">
    <%= f.label :name %><br />
    <%= select 'user', 'name', InternalUsers.all.collect { |i| [ i.name, i.id ] }, { selected: ( InternalUsers.find_by_name(@user.name) ? InternalUsers.find_by_name(@user.name).id : nil ) } %>
  </div>
  <div class="field">
    <% for group in Group.all %>
      <div>
        <%= check_box_tag 'user[group_ids][]', group.id, @user.groups.include?(group) %>
        <%= group.name.strip %>
      </div>
    <% end %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= select 'user', 'email', InternalUsers.all.collect { |i| [ i.email, i.id ] }, { selected: ( InternalUsers.find_by_email(@user.email) ? InternalUsers.find_by_email(@user.email).id : nil ) } %>
  </div>
  <div class="field">
  <% if @action_name=='new' %>
  	<%= f.label :password, 'Password' %><br />
  <% else %>
  	<%= f.label :password, 'Change Password' %><br /> 
  <% end %>
  <%= f.password_field :password, size: 40 %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, 'Confirm' %><br />
    <%= f.password_field :password_confirmation, size: 40 %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
  </fieldset>
<% end %>

</div>
