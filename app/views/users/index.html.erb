<% if notice %>
	<p id="notice"><%= notice %></p>
<% end %>

<h1>Users</h1>



<table >
  <tr>
    <th>UID</th>
    <th>Username</th>
    <th>Name</th>
    <th>Group</th>
    <th>Email</th>
    <th>Password digest</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr class="<%= cycle('list_line_odd','list_line_even') %>">
  <td><%= user.uid %></td>
  <td><%= user.username %></td>
  <td><%= user.name %></td>
    <td><%= user.get_group(user.group_id) %></td>
    <td><%= user.email %></td>
    <td><%= truncate(user.password_digest, length: 10) %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

