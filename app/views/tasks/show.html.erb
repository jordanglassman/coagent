<% if notice %>
  <p id="notice"><%= notice %></p>
<% end %>

<h1>Task <%= @task.name %></h1>

<p>
  <b>Priority Task?:</b>
  <%= @task.priority_task_flag %>
</p>

<p>
  <b>Task:</b>
  <%= @task.id %>
</p>

<p>
  <b>Project:</b>
  <%= @task.project.name %>
</p>

<p>
  <b>Name:</b>
  <%= @task.name %>
</p>

<p>
  <b>Description:</b>
  <%= @task.description %>
</p>

<p>
  <b>Due date:</b>
  <%= @task.due_date %>
</p>

<p>
  <b>Notes:</b>
  <%= @task.notes %>
</p>

<p>
  <b>Severity:</b>
  <%= Task::SEVERITY.invert[@task.severity.to_i] %>
</p>

<p>
  <b>Status:</b>
  <%= Task::STATUS.invert[@task.status.to_i] %>
</p>

<p>
  <b>Resource:</b>
  <%= @task.resource %>
</p>

<p>
  <b>Deliverable:</b>
  <%= @task.deliverable %>
</p>

<p>
  <b>Completed date:</b>
  <%= @task.completed_date %>
</p>


<%= link_to 'Edit', edit_task_path(@task) %> |
<%= link_to 'Back', list_tasks_path %>
